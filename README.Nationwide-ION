PROJECT=Nationwide-ION ARCH=x86_64 make release

cp target/OpenELEC-Nationwide-ION.x86_64-3.1.5.kernel target/KERNEL
cp target/OpenELEC-Nationwide-ION.x86_64-3.1.5.system target/SYSTEM
md5sum -t target/SYSTEM > target/SYSTEM.md5
md5sum -t target/KERNEL > target/KERNEL.md5
scp target/SYSTEM* root@192.168.2.64:/storage/.update/
scp target/KERNEL* root@192.168.2.64:/storage/.update/

