. config/options $1

if [ -z "$PKG_BUILD" ]; then
  PKG_BUILD=$BUILD/${PKG_NAME}-${PKG_VERSION}
  echo "BUILD Fixing empty PKG_BUILD->" $PKG_BUILD
fi

[ -d $PKG_BUILD ] && rm -rf $PKG_BUILD

DIR_ON_ENTRY=`pwd`
PKG_GITURL="git@github.com:nicholasstokes/addons.nationwide.git"
PKG_GITVERSION="ccf2e1320d5859cfd624ebb8fc2bc3e3ae5760e3"

mkdir -p $PKG_BUILD
  git clone $PKG_GITURL $PKG_BUILD >/dev/null
  cd $PKG_BUILD
  git checkout -b $PKG_GITVERSION >/dev/null

cd $DIR_ON_ENTRY
cd $PKG_BUILD/service.openelec.settings
  python -Wi -t -B $ROOT/$TOOLCHAIN/lib/python2.7/compileall.py ./resources/lib/ -f >/dev/null
  rm -rf `find ./resources/lib/ -name "*.py"`
  python -Wi -t -B $ROOT/$TOOLCHAIN/lib/python2.7/compileall.py ./oe.py -f >/dev/null
  rm -rf ./oe.py

cd $DIR_ON_ENTRY
cd $PKG_BUILD/script.nationwide_helper
  #python -Wi -t -B $ROOT/$TOOLCHAIN/lib/python2.7/compileall.py ./resources/lib/ -f
  #rm -rf `find ./resources/lib/ -name "*.py"`

cd $DIR_ON_ENTRY
cd $PKG_BUILD/script.nationwide_membernet
  python -Wi -t -B $ROOT/$TOOLCHAIN/lib/python2.7/compileall.py ./resources/lib/ -f >/dev/null
  rm -rf `find ./resources/lib/ -name "*.py"`

cd $DIR_ON_ENTRY
cd $PKG_BUILD/skin.nationwide
  TexturePacker -input ./media -output ./Textures.xbt -dupecheck -use_none >/dev/null
