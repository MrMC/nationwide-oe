. config/options $1

if [ -z "$PKG_BUILD" ]; then
  PKG_BUILD=$BUILD/${PKG_NAME}-${PKG_VERSION}
  echo "INSTALL Fixing PKG_BUILD->" $PKG_BUILD
fi

mkdir -p $INSTALL/usr/share/xbmc/addons/service.openelec.settings
  cp -R $PKG_BUILD/service.openelec.settings/* $INSTALL/usr/share/xbmc/addons/service.openelec.settings

mkdir -p $INSTALL/usr/share/xbmc/addons/script.nationwide_helper
  cp -R $PKG_BUILD/script.nationwide_helper/* $INSTALL/usr/share/xbmc/addons/script.nationwide_helper

mkdir -p $INSTALL/usr/share/xbmc/addons/script.nationwide_membernet
  cp -R $PKG_BUILD/script.nationwide_membernet/* $INSTALL/usr/share/xbmc/addons/script.nationwide_membernet

#mkdir -p $INSTALL/usr/share/xbmc/addons/webinterface.nationwide_membernet
#  cp -R $PKG_BUILD/webinterface.nationwide_membernet/* $INSTALL/usr/share/xbmc/addons/webinterface.nationwide_membernet

mkdir -p $INSTALL/usr/config/webinterface.nationwide_membernet
  cp -R $PKG_BUILD/webinterface.nationwide_membernet/* $INSTALL/usr/config/webinterface.nationwide_membernet
  ln -s /storage/.config/webinterface.nationwide_membernet $INSTALL/usr/share/xbmc/addons/webinterface.nationwide_membernet

mkdir -p $INSTALL/usr/share/xbmc/addons/skin.nationwide
  cp -R $PKG_BUILD/skin.nationwide/*/ $INSTALL/usr/share/xbmc/addons/skin.nationwide
  cp $PKG_BUILD/skin.nationwide/*.txt $INSTALL/usr/share/xbmc/addons/skin.nationwide 2>/dev/null || :
  cp $PKG_BUILD/skin.nationwide/*.xml $INSTALL/usr/share/xbmc/addons/skin.nationwide 2>/dev/null || :
  cp $PKG_BUILD/skin.nationwide/*.png $INSTALL/usr/share/xbmc/addons/skin.nationwide 2>/dev/null || :
  rm -rf $INSTALL/usr/share/xbmc/addons/skin.nationwide/media
  mkdir -p $INSTALL/usr/share/xbmc/addons/skin.nationwide/media
  cp $PKG_BUILD/skin.nationwide/Textures.xbt $INSTALL/usr/share/xbmc/addons/skin.nationwide/media

mkdir -p $INSTALL/usr/config
  cp -f $PROJECT_DIR/$PROJECT/config/* $INSTALL/usr/config/ 2>/dev/null || :
  echo "$PKG_VERSION" > $INSTALL/etc/version.nationwide_membernet
